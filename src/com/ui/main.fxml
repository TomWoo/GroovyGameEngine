<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ui.UIController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" text="Load" />
              <MenuItem mnemonicParsing="false" text="Save" />
              <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <!--<MenuItem mnemonicParsing="false" text="Component Editor"/>-->
              <MenuItem mnemonicParsing="false" text="System Editor" />
              <MenuItem mnemonicParsing="false" text="Game Loop Manager" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="Manual" />
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ScrollPane fx:id="viewer" prefHeight="850.0" prefWidth="100.0">
               <content>
                  <Canvas fx:id="viewerCanvas" height="${viewer.prefHeight}" width="${viewer.prefWidth}" />
               </content>
            </ScrollPane>
            <ToolBar prefHeight="0.0" prefWidth="400.0">
              <items>
                  <ToggleButton mnemonicParsing="false" text="Play" />
                  <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="20.0" />
                  <Label text="Speed" />
                  <Slider max="5.0" min="-5.0" value="1.0" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </center>
   <left>
      <VBox prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <ListView fx:id="paletteListView" prefHeight="850.0" prefWidth="100.0" />
            <ToolBar prefHeight="0.0" prefWidth="100.0">
              <items>
                  <SplitMenuButton mnemonicParsing="false" text="Create New Entity">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Import" />
                      <MenuItem mnemonicParsing="false" text="Export" />
                    </items>
                  </SplitMenuButton>
              </items>
            </ToolBar>
         </children>
      </VBox>
   </left>
   <right>
      <VBox prefHeight="200.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <children>
            <TreeTableView prefHeight="400.0" prefWidth="200.0">
              <columns>
                <TreeTableColumn prefWidth="75.0" text="Name" />
                <TreeTableColumn prefWidth="75.0" text="UID" />
                <TreeTableColumn prefWidth="75.0" text="Key" />
                <TreeTableColumn prefWidth="75.0" text="Value" />
              </columns>
            </TreeTableView>
            <ConsoleTextArea fx:id="consoleTextArea" prefHeight="200.0" prefWidth="200.0" />
            <!--<TextArea prefHeight="300.0" prefWidth="200.0" />-->
            <ToolBar prefHeight="0.0" prefWidth="100.0">
              <items>
                  <SplitMenuButton mnemonicParsing="false" onAction="#execute" text="Execute">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#runScript" text="Run script..." />
                      <!--<MenuItem mnemonicParsing="false" onAction="#saveScript" text="Save script..." />-->
                    </items>
                  </SplitMenuButton>
                  <ChoiceBox prefWidth="150.0" />
              </items>
            </ToolBar>
         </children>
      </VBox>
   </right>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
